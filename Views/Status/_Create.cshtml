@model TMS_Project.Models.Status

@{
    ViewData["Title"] = "Create";
}




<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="form-validation">
            <form asp-action="Create" id="CreateStatusForm" class="needs-validation" novalidate>
                <input type="hidden" asp-for="StatusId" id="hdnStatusId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label asp-for="StatusName" class="control-label">Status Name</label>
                    <input asp-for="StatusName" class="form-control" required />
                    <div class="invalid-feedback">
                        Please enter a Status.
                    </div>
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <a id="btnCreateStatusPost" onclick="InsertStatus()" class="btn mb-2"></a>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>



