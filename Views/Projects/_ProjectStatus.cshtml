@model TMS_Project.Models.Project

<div class="col-lg-12">
    <div class="card">

        <form id="CreateProjectStatusForm" class="needs-validation" novalidate>
            <div class="row">

                <div class="col-md-6">

                    <div class="form-validation">

                        <input type="hidden" value="@Model.ProjectId" name="ProjectId" id="hdnProjectStatusId" />
                        <input type="hidden" asp-for="Comment" id="hdnProjectCommentId" />
                        <div class="form-group">

                            <div class="col-md-6">
                                <label asp-for="StatusId" class="control-label">Status </label>
                                <select asp-for="StatusId" name="StatusId" class="form-control">
                                    <option>-----Select Status-----</option>
                                    @if (User.IsInRole("Team Lead"))
                                    {
                                        <option value="8">Pending</option>
                                        <option value="1">Inprogress</option>
                                        <option value="2">Completed</option>
                                    }
                                    @if (User.IsInRole("Project Manager"))
                                    {
                                        <option value="10">Approved</option>
                                        <option value="11">Rejected</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Comment</label>
                        <textarea class="form-control" id="textArea" asp-for="Comment.ComentText" rows="10" placeholder="Write something" style="margin-bottom:1rem"></textarea>
                    </div>
                </div>
            </div>
            <div class="row " style="float:right !important">
                <div class="form-group">
                    <a onclick="ProjectStatusFunc()" class="btn btn-primary btn mb-2">Save</a>
                </div>
            </div>
        </form>

    </div>
</div>
