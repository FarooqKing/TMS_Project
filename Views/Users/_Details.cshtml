@model TMS_Project.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">User Details</h4> 
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-responsive-sm">
                        <tr>
                            <td class="col-sm-2">
                                First Name
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.UserFirstName)
                            </td>
                        </tr>
                        <tr>
                            <td class="col-sm-2">
                                Last Name
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.UserLastName)
                            </td>
                        </tr>
                        <tr>
                            <td class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    
                        <tr>
                            <td class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Password)
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.Password)
                            </td>
                        </tr>
                      
                        <tr>
                            <td class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Contact)
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.Contact)
                            </td>
                        </tr>
                        <tr>
                            <td class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Role)
                            </td>
                            <td class="col-sm-10">
                                @Html.DisplayFor(model => model.Role.RoleName)
                            </td>
                        </tr>
                        <tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<form asp-action="AssignTo" id="CreateUserForm" class="needs-validation" novalidate>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Assign User To</h4>
                </div>
                <div class="card-body">
                    <div class="col-md-6">
                        <input type="hidden" asp-for="UserId" value="@Model.UserId" name="User.UserId" />
                        <label asp-for="ManagerId" class="control-label">Assigned to</label>
                        <select asp-for="ManagerId" class="form-control" name="User.ManagerId" asp-items="ViewBag.ManagerId" required>
                            <option value="">--Select--</option>
                        </select>
                        <div class="invalid-feedback">
                            Please fill this field.
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row " style="float:right !important">
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn mb-2">Save</button>


        </div>

    </div>

</form>

