@model TMS_Project.Models.User

@{
    ViewData["Title"] = "Create";
}


@if(!string.IsNullOrEmpty(ViewBag.ErrorMsg)){

    <div class="row">
        <div class="col-sm-12">
        @ViewBag.ErrorMsg
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="form-validation">
            <form asp-action="Create" id="CreateUserForm" class="needs-validation" novalidate>
                <input type="hidden" asp-for="UserId" id="hdnUserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
            <div class="col-md-6">
                <label asp-for="UserFirstName" class="control-label">First Name</label>
                <input asp-for="UserFirstName" class="form-control" required />
                        <div class="invalid-feedback">
                            Please enter a User Name.
                        </div>
                <span asp-validation-for="UserFirstName" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="UserLastName" class="control-label">Last Name</label>
                        <input asp-for="UserLastName" class="form-control" required  />
                        <div class="invalid-feedback">
                            Please enter a User Last Name.
                        </div>
                <span asp-validation-for="UserLastName" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <div class="invalid-feedback">
                            Please enter a Email.
                        </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="RoleId" class="control-label">Role Name</label>
                <select asp-for="RoleId" class ="form-control" asp-items="ViewBag.RoleId" required>
                    <option>-----Select role-----</option>
                </select>
                        <div class="invalid-feedback">
                            Please enter a Role.
                        </div>
            </div> 
          @*   <div class="col-md-6">
                <label asp-for="ManagerId" class="control-label">Manager Name</label>
                        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId" required>
                    <option value="0">--Select--</option>
                </select>
                        <div class="invalid-feedback">
                            Please enter a Role.
                        </div>
            </div> *@
                <div class="col-md-6">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
                        <div class="invalid-feedback">
                            Please enter a Password.
                        </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

                <div class="col-md-6">
                <label asp-for="Contact" class="control-label"></label>
                <input asp-for="Contact" class="form-control" required />
                        <div class="invalid-feedback">
                            Please enter a Contact.
                        </div>
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
                    <div class="col-md-6">
                        <a id="btnCreateUserPost" onclick="InsertUser()" class="btn mb-2"></a>
            </div>
            </div>
        </form>
    </div>
    </div>
</div>



